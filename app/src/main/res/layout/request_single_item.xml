<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"

    >

    <TextView
        android:id="@+id/request_user_name_text"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/request_user_image"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/status_text"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/request_user_name_text"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/request_user_image"
        android:text="Status" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/request_user_image"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/default_avatar"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf= "@+id/request_user_name_text">

        <ImageButton
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_gravity="center"
            android:id="@+id/accept_button"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_rounded"
            android:src="@drawable/ic_done_black"
            android:layout_marginRight="5dp"
            />

        <ImageButton
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:id="@+id/reject_button"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_rounded"
            android:src="@drawable/ic_close_black" />
    </LinearLayout>


</RelativeLayout>